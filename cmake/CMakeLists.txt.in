### Download Instructions for External Projects ###
cmake_minimum_required(VERSION 3.10.0)

include(ExternalProject)

set(ENV EXTERNAL_PROJ_DOWNLOAD_DIR "${CMAKE_SOURCE_DIR}/externalProjects")
set(ENV EXTERNAL_PROJ_BINARY_DIR "${CMAKE_BINARY_DIR}/externalProjects")


project(utilities-api-download NONE)

ExternalProject_Add(utilities-api
    GIT_REPOSITORY    https://github.com/crdrisko/utilities-api.git
    GIT_TAG           master
    SOURCE_DIR        "$ENV{EXTERNAL_PROJ_DOWNLOAD_DIR}/utilities-api-src"
    BINARY_DIR        "$ENV{EXTERNAL_PROJ_BINARY_DIR}/utilities-api-build"
    CONFIGURE_COMMAND ""
    BUILD_COMMAND     ""
    INSTALL_COMMAND   ""
    TEST_COMMAND      "")
   

project(googletest-download NONE)

ExternalProject_Add(googletest
    GIT_REPOSITORY    https://github.com/google/googletest.git
    GIT_TAG           master
    SOURCE_DIR        "$ENV{EXTERNAL_PROJ_DOWNLOAD_DIR}/googletest-src"
    BINARY_DIR        "$ENV{EXTERNAL_PROJ_BINARY_DIR}/googletest-build"
    CONFIGURE_COMMAND ""
    BUILD_COMMAND     ""
    INSTALL_COMMAND   ""
    TEST_COMMAND      "")
